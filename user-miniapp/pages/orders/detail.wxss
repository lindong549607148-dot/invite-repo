.page { padding: 24rpx; padding-bottom: 48rpx; }
.loading, .empty { text-align: center; padding: 80rpx; color: #999; }
.section { padding: 24rpx; margin-bottom: 24rpx; }
.section .label { font-size: 26rpx; color: #999; display: block; margin-bottom: 8rpx; }
.section .row { display: flex; justify-content: space-between; align-items: center; margin-bottom: 12rpx; }
.section .val { font-size: 28rpx; color: #333; }
.section .status { font-size: 26rpx; padding: 4rpx 12rpx; border-radius: 8rpx; }
.section .status.CREATED { background: #FFF5F7; color: #FE2C55; }
.section .status.PAID { background: #E8F5E9; color: #4CAF50; }
.section .status.SHIPPED { background: #E3F2FD; color: #2196F3; }
.section .status.RECEIVED { background: #E8F5E9; color: #4CAF50; }
.section .status.CLOSED { background: #f5f5f5; color: #999; }
.section .amount { font-size: 34rpx; font-weight: 600; color: #FE2C55; }
.traces { margin-top: 16rpx; padding-left: 16rpx; border-left: 4rpx solid #FFE4E9; }
.trace-item { font-size: 24rpx; color: #666; margin-bottom: 8rpx; }
.no-logistics { font-size: 26rpx; color: #999; }
.cta-card { text-align: center; }
.btn-big { height: 88rpx; line-height: 88rpx; font-size: 30rpx; }
