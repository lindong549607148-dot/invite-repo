.page { padding: 24rpx; padding-bottom: 140rpx; }
.section { padding: 24rpx; margin-bottom: 24rpx; }
.section .label { font-size: 26rpx; color: #999; display: block; margin-bottom: 8rpx; }
.section .name { font-size: 30rpx; font-weight: 600; color: #333; display: block; }
.section .sku-name { font-size: 26rpx; color: #666; margin-top: 8rpx; display: block; }
.section .price { font-size: 36rpx; color: #FE2C55; font-weight: 700; margin-top: 16rpx; display: block; }
.section .val { font-size: 30rpx; color: #333; }
.bottom-bar { position: fixed; bottom: 0; left: 0; right: 0; padding: 24rpx; background: #fff; box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.06); }
.btn-big { height: 88rpx; line-height: 88rpx; font-size: 32rpx; }
