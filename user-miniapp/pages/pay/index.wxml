<view class="page">
  <view class="card section" wx:if="{{order}}">
    <text class="label">订单号</text>
    <text class="orderId">{{order.orderId}}</text>
    <text class="amount">¥{{(order.amount / 100).toFixed(2)}}</text>
  </view>
  <view class="tip">当前为模拟支付，点击下方按钮完成支付</view>
  <view class="bottom-bar">
    <button class="btn-primary btn-big" loading="{{payLoading}}" disabled="{{payLoading}}" bindtap="mockPay">模拟支付成功</button>
  </view>
</view>
