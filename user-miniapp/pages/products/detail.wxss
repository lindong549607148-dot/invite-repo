.page { padding: 24rpx; padding-bottom: 140rpx; }
.loading, .empty { text-align: center; padding: 80rpx; color: #999; }

.head { padding: 24rpx; position: relative; }
.head .cover { width: 100%; height: 360rpx; border-radius: 12rpx; display: block; }
.head .tag-activity { position: absolute; top: 32rpx; left: 32rpx; }
.head .title { font-size: 34rpx; font-weight: 600; color: #333; margin-top: 24rpx; display: block; }
.head .row { margin-top: 16rpx; }
.head .price { font-size: 40rpx; color: #FE2C55; font-weight: 700; }
.head .origin { font-size: 26rpx; color: #999; text-decoration: line-through; margin-left: 12rpx; }

.section { padding: 24rpx; margin-top: 24rpx; }
.section .label { font-size: 28rpx; color: #666; display: block; margin-bottom: 16rpx; }
.skus { display: flex; flex-wrap: wrap; gap: 16rpx; }
.sku-item { padding: 16rpx 24rpx; background: #FFF5F7; border-radius: 12rpx; font-size: 26rpx; color: #FE2C55; border: 2rpx solid transparent; }
.sku-item.active { border-color: #FE2C55; background: #FFE4E9; }
.qty-input { border: 1rpx solid #eee; border-radius: 8rpx; padding: 16rpx; width: 120rpx; text-align: center; margin-top: 8rpx; }

.bottom-bar { position: fixed; bottom: 0; left: 0; right: 0; padding: 24rpx; background: #fff; box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.06); }
.btn-big { height: 88rpx; line-height: 88rpx; font-size: 32rpx; }
