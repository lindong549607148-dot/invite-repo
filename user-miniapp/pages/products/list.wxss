.page { padding: 24rpx; min-height: 100vh; }
.header { margin-bottom: 32rpx; display: flex; align-items: center; flex-wrap: wrap; gap: 16rpx; }
.title { font-size: 40rpx; font-weight: 700; color: #333; }
.sub { font-size: 26rpx; color: #FE2C55; margin-left: 12rpx; }
.nav-btn { margin-left: auto; padding: 12rpx 24rpx; background: #FFF5F7; color: #FE2C55; border-radius: 16rpx; font-size: 28rpx; }

.loading, .empty { text-align: center; padding: 80rpx; color: #999; }
.list { display: flex; flex-direction: column; gap: 24rpx; }

.card-item { display: flex; padding: 24rpx; }
.card-item .cover { width: 200rpx; height: 200rpx; border-radius: 12rpx; flex-shrink: 0; }
.card-item .info { flex: 1; margin-left: 24rpx; display: flex; flex-direction: column; justify-content: space-between; }
.card-item .name { font-size: 30rpx; font-weight: 600; color: #333; display: -webkit-box; -webkit-line-clamp: 2; overflow: hidden; }
.card-item .row { margin-top: 12rpx; }
.card-item .price { font-size: 36rpx; color: #FE2C55; font-weight: 700; }
.card-item .origin { font-size: 24rpx; color: #999; text-decoration: line-through; margin-left: 12rpx; }
