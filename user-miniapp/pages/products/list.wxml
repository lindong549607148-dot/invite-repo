<view class="page">
  <view class="header">
    <text class="title">邀请商城</text>
    <text class="sub">助力免单</text>
    <view class="nav-btn" bindtap="toOrders">我的订单</view>
  </view>

  <view wx:if="{{loading}}" class="loading">加载中...</view>
  <view wx:elif="{{list.length === 0}}" class="empty">暂无商品</view>
  <view wx:else class="list">
    <view
      class="card card-item"
      wx:for="{{list}}"
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="toDetail"
    >
      <image class="cover" src="{{item.coverImage || PLACEHOLDER_IMG}}" mode="aspectFill" />
      <view class="info">
        <text class="name">{{item.title}}</text>
        <view class="tag-activity">助力免单</view>
        <view class="row">
          <text class="price">¥{{(item.price / 100).toFixed(2)}}</text>
          <text class="origin" wx:if="{{item.originalPrice}}">¥{{(item.originalPrice / 100).toFixed(2)}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
